
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can read and write to their own document.
      // No one can list all users.
      allow get, update, delete: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow list: if false;
    }

    match /users/{userId}/{collection}/{docId} {
      // Any subcollection under a user (patients, messageTemplates, etc.)
      // can be fully accessed by the owner of the parent user document.
      allow read, write: if isOwner(userId);
    }
  }
}
